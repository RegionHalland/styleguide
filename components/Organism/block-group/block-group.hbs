{{#unless withContainer}}
    <div class="clearfix">
        <div class="row row-eq-height">
            {{#each blocks}}
                <div class="col col-12 md-col-6 lg-col-4 xl-col-3 rh-block-group__item">
                    {{render '@block' itemData merge=true}}
                </div>
            {{/each}}
        </div>
    </div>
{{else}}
    <div class="clearfix rh-block-group__container-p">
        <div class="row row-eq-height">
            {{#each blocks}}
                <div class="col col-12 md-col-6 lg-col-4 xl-col-3 rh-block-group__item">
                    {{render '@block' itemData merge=true}}
                </div>
            {{/each}}
        </div>
    </div>
{{/unless}}