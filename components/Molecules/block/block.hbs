{{#unless isClickable}}
    <!-- Default template - View Notes to know how to use the component-->
    <div class="rh-block-box">
        <div class="rh-block">
            {{#if imageUrl}}
                <img src="{{imageUrl}}" alt="Text som beskriver bilden">
            {{/if}}
            <div class="rh-block-content">
                <p class="h3">
                    <a href="#" class="rh-block-content__title rh-link--navigation">{{title}}</a>
                </p>

                <p class="rh-block-content__description">{{description}}</p>
            </div>
        </div>
    </div>
{{else}}
    <!-- Clickable template - View Notes to know how to use the component-->
    <div class="rh-block-box rh-block--clickable">
        {{!-- The <a> tag is using for clickable feature --}}
        <a href="#" class="rh-link--navigation rh-block--clickable-link" title="{{title}}"></a>

        <div class="rh-block">
            {{#if imageUrl}}
                <img src="{{imageUrl}}" alt="Text som beskriver bilden">
            {{/if}}
            <div class="rh-block-content">
                <p class="h3">
                    <a href="#" class="rh-block-content__title rh-link--navigation" tabindex="-1">{{title}}</a>
                </p>

                <p class="rh-block-content__description">{{description}}</p>
            </div>
        </div>
    </div>
{{/unless}}