.icon-container {
	border:1px solid palette(grey, base);
	display:inline-block;
	margin:$space-2;
	border-radius:$border-radius;

	&__inner {
		height:120px;
		width:200px;
		display:flex;
		justify-content:center;
		align-items:center;
	}
	&__name {
		padding:$space-2;
		background: palette(grey, base);
		display: block;
		text-align:center;
	}
}

.icon {
	display: inline-block;
	height: 16px;
	width:  16px;
	vertical-align: middle;
}

.icon--sm {
	width:  12px;
	height: 12px;
}

.icon--md {
	width:  24px;
	height: 24px;
}

.icon--lg {
	width:  32px;
	height: 32px;
}

.icon--xl {
	width:  64px;
	height: 64px;
}