// @description
// Current icons from <a href="https://github.com/iconic/open-iconic">https://github.com/iconic/open-iconic</a> <br/> Custom icons should be exported with SVGO compression and at 8x8 pixels.
//
// @state .icon--sm - Small (8px)
// @state .icon--md - Medium (24px)
// @state .icon--lg - Large (32px)
// @state .icon--xl - Extra large (64px)
//
// @markup
// <div>
// {{#shapes}}
//	 <svg class="icon">
//	 	<use xlink:href="#{{base}}"/>
//	 </svg>
// {{/shapes}}
// </div>
//

.icon {
	display: inline-block;
	height: 16px;
	width:  16px;
	vertical-align: middle;
}

.icon--sm {
	width:  12px;
	height: 12px;
}

.icon--md {
	width:  24px;
	height: 24px;
}

.icon--lg {
	width:  32px;
	height: 32px;
}

.icon--xl {
	width:  64px;
	height: 64px;
}