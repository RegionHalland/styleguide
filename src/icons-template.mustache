.icon-sm::before,
.icon::before,
.icon-md::before,
.icon-lg::before,
.icon-xl::before {
	background: transparent url('../icons/sprite.svg') no-repeat;
	background-size: auto 100%;    
	vertical-align: middle;
	display: inline-block;
}

.icon-sm::before {
	width:  8px;
	height: 8px;
}

.icon::before {
	width:  16px;
	height: 16px;
}

.icon-md::before {
	width:  24px;
	height: 24px;
}

.icon-lg::before {
	width:  32px;
	height: 32px;
}

.icon-xl::before {
	width:  64px;
	height: 64px;
}

{{#shapes}}
.icon-{{base}}::before { content: ''; background-position: {{position.relative.x}}% {{position.relative.y}}%;}
{{/shapes}}